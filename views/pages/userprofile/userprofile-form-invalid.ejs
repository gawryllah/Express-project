<%- include('../../fragments/header.ejs') %>
   
    <main>
        
        <h2>Nowy użytkownik</h2>

       <form class="form">


            <label for="userName">Username: <span class="symbol-required">*</span></label>
            <input type="text" name="userName" id="userName" class="error-input" required />       
            <span id="errorUserName" class="errors-text">Pole jest wymagane!</span>

            <label for="favouriteGame">FavouriteGame: <span class="symbol-required">*</span></label>
            <input type="text" name="favouriteGame" id="favouriteGame" class="error-input" required />        
            <span id="errorFavouriteGame" class="errors-text">Pole jest wymagane!</span>

            <label for="gameScore">GameScore: </label>
            <input type="number" name="gameScore" id="gameScore"  />      
            <span id="errorGameScore" class="errors-text"></span>

            <label for="dateOfVUfrom">Valuable User From: </label>
            <input type="date" name="dateOfVUfrom" id="dateOfVUfrom"  />        
            <span id="errorDateOfVUfrom" class="errors-text"></span>

            <label for="privateProfile">PrivateProfile?: </label>
            <input type="checkbox" name="privateProfile" id="privateProfile"  />      
            <span id="errorPrivateProfile" class="errors-text"></span>

            <label for="description">Description: </label>
            <input type="text" name="description" id="description"  />     
            <span id="errorDescription" class="errors-text"></span>

            <div>
                <p id="errorsSummary"><span class="errors-text">Formularz zawiera błędy!</span></p>
                <input type="submit" value="Dodaj" class="form-button-submit"/>
                <!-- input type="reset" --> 
                <a href="userprofile-form.html" class="form-button-cancel">Anuluj</a>
            </div>
       </form>
       
    </main>
    <%- include('../../fragments/footer.ejs') %>

</html>